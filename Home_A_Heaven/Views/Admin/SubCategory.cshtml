@model IEnumerable<Home_A_Heaven.Models.SubCategoryModel>

@{
    ViewBag.Title = "SubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
    int id = ViewBag.CategoryId;
}


<style>
    body {
        font-family: 'Times New Roman';
        color: gray;
    }


    .btn1 {
        border-radius: 0px;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Categories">Categories</a></li>
                    <li class="breadcrumb-item active">Sub Categories </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header" style="border:0px;">
                    <div class="d-flex justify-content-between">
                        <h1 class="" style="color:black;">Categories</h1>
                        <span><a href="/Admin/AddSubCategorie/@id" class="btn1 btn btn-outline-secondary">Add Sub Category </a></span>

                    </div>
                </div>
                <div class="card-body">


                    <table class="table" id="table" style="text-align:center;">
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                               Image
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SubCateName)
                            </th>


                            <th>Actions</th>
                        </tr>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @if (item.ImageUrl != null)
                                        {
                                            <img src="@Url.Content(item.ImageUrl)" style="width:40px;height:40px;" />

                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubCateName)
                                    </td>
                                   
                                    <td>

                                        <a href="/Admin/SubCategory/@item.Id"></a>
                                        <a class="btn btn-sm btn-outline-danger btn1" href="/Admin/DeleteSubCategory/@item.Id" onclick="return confirm('Are you Sure want to delete this Job')">
                                            Delete

                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        }


                    </table>

                </div><!--Flex end-->
            </div>

        </div>
    </div>

</div>