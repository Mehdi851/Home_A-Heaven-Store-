@model IEnumerable<Home_A_Heaven.Models.OrderModel>
@using Home_A_Heaven.Models
@{
    ViewBag.Title = "ViewOrders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    IEnumerable<UserModel> users = ViewBag.Users;
    int count = 1;
}

<style>
    body {
        font-family: 'Times New Roman';
        color: gray;
    }
</style>
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    
                    <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item">All Orders</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header" style="border:0px;">
                    <div class="d-flex justify-content-between">
                        <h1 class="" style="color:black;">Orders</h1>
                        
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>
                                No#
                            </th>
                            <th class="">
                                @Html.DisplayName("User Name")
                            </th>
                            <th class="">
                                @Html.DisplayName("Email")
                            </th>
                            <th class="">
                                @Html.DisplayName("Address")
                            </th>
                            <th class="">
                                @Html.DisplayName("Contact No")
                            </th>
                            <th>
                                @Html.DisplayName("Total")
                            </th>
                            <th>Action</th>
                        </tr>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {

                                <tr>
                                    @foreach (UserModel user in users)
                                    {
                                        if (user.Id==item.UserId)
                                        {
                                        <th>
                                             @count
                                        </th>
                                        <td>
                                            @user.Username
                                        </td>
                                        <td>
                                           @user.Email
                                        </td>
                                        <td>
                                            @user.Address
                                        </td>
                                         <td>
                                            @user.ContactNo
                                        </td>
                                        <td>
                                            @item.SubTotal
                                        </td>
                                        <td>
                                            <a href="/Admin/OrderDetail/@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                                        </td>
                                        }

                                     
                                    }
                                </tr>

                                count = count + 1;
                            }


                        }
                        else
                        {

                        }
                    </table>



                </div><!--Flex end-->
            </div>

        </div>
    </div>

</div>

