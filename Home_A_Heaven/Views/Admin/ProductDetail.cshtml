@model Home_A_Heaven.Models.ProductModel

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        font-family: 'Times New Roman';
        color: gray;
    }

    .tableData {
       height:10px !important;
       padding-top:0px !important;
    }
    .btn1 {
        border-radius: 0px;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Product Details </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header" style="border:0px;">
                    <div class="d-flex justify-content-between">
                        <h1 class="" style="color:black;">Product Detail</h1>
                       

                    </div>
                </div>
                <div class="card-body">


                    <table class="table col-lg-6 table-borderless" id="table" style="text-align:left;">

                        <tr >
                            <td class="tableData">
                                Name
                            </td>
                            <td class="tableData">
                                @Model.Name
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Old Price
                            </td>
                            <td class="tableData">
                                @Model.Old_Price
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Discount
                            </td>
                            <td class="tableData">
                                @Model.Discount
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                New Price
                            </td>
                            <td class="tableData">
                                @Model.New_Price
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Matrial
                            </td>
                            <td class="tableData">
                                @Model.Matrial
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Color
                            </td>
                            <td class="tableData">
                                @Model.Color
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Height
                            </td>
                            <td class="tableData">
                                @Model.Height
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Size
                            </td>
                            <td class="tableData">
                                @Model.Size
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Type
                            </td>
                            <td class="tableData">
                                @Model.Type
                            </td>
                        </tr>
                        <tr>
                            <td class="tableData">
                                Discription
                            </td>
                            <td class="tableData">
                                @Model.Discription
                            </td>
                        </tr>
                    </table>

                </div><!--Flex end-->
            </div>

        </div>
    </div>

</div>